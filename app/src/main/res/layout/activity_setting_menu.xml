<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingMenuActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="310dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/titles_background"
        android:fontFamily="@font/montserrat"
        android:text="@string/activity_settings_title"
        android:textAlignment="center"
        android:textColor="@color/Titles"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/change_personal_data_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:onClick="goToChangePersonalData"
        android:id="@+id/change_personal_data_button"
        android:layout_width="235dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:background="@drawable/custom_button"
        android:text="@string/changed_title_button"
        android:textColor="@color/Titles"
        app:layout_constraintBottom_toTopOf="@id/limitTimeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/limitTimeTextView"
        android:layout_width="244dp"
        android:layout_height="62dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/limit_time_title"
        android:textColor="@color/colorButtons"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/limit_time_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_personal_data_button" />

    <Button
        android:id="@+id/less_time_button"
        android:layout_width="76dp"
        android:layout_height="34dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/minus_button"
        app:layout_constraintBottom_toTopOf="@id/check_progress_button"
        app:layout_constraintEnd_toStartOf="@+id/limit_time_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limitTimeTextView" />

    <Button
        android:id="@+id/more_time_button"
        android:layout_width="63dp"
        android:layout_height="44dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/plus_button"
        app:layout_constraintBottom_toTopOf="@id/check_progress_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/limit_time_input"
        app:layout_constraintTop_toBottomOf="@+id/limitTimeTextView" />

    <TextView
        android:id="@+id/limit_time_input"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_fields"
        android:text="@string/time_default"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/check_progress_button"
        app:layout_constraintEnd_toStartOf="@+id/more_time_button"
        app:layout_constraintStart_toEndOf="@+id/less_time_button"
        app:layout_constraintTop_toBottomOf="@+id/limitTimeTextView" />

    <Button
        android:onClick="goToChildProgress"
        android:id="@+id/check_progress_button"
        android:layout_width="235dp"
        android:layout_height="53dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="415dp"
        android:background="@drawable/custom_button"
        android:text="@string/check_progress_title_button"
        android:textColor="@color/Titles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limitTimeTextView" />

    <Button
        android:onClick="goBack"
        android:id="@+id/return_button_settings"
        android:layout_width="75dp"
        android:layout_height="63dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="320dp"
        android:layout_marginRight="320dp"
        android:background="@drawable/return_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_progress_button" />

</androidx.constraintlayout.widget.ConstraintLayout>